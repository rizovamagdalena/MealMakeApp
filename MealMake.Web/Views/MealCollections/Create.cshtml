@model MealMake.Domain.ViewModels.MealCollectionCreateViewModel

@{
    ViewData["Title"] = "Create Meal Collection";
}

<div class="container my-5">
    <h1 class="mb-4">➕ Create Meal Collection</h1>

    <div class="card shadow-sm p-4 mb-4">
        <h4 class="mb-3">Collection Details</h4>
        <hr />

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter collection name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary px-4">Create Collection</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}